<Page x:Class="FDJASVS_X_Bootstrapper.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FDJASVS_X_Bootstrapper"
      mc:Ignorable="d" 
      d:DesignHeight="345" d:DesignWidth="460"
 Title="Settings" Height="345" Width="460" Background="Blue">

    <Grid>
        <ScrollViewer HorizontalAlignment="Left" Width="439" Margin="0,0,0,40" >

            <StackPanel Height="305">
                <ToggleButton Content="X" Height="56" FontFamily="Helvetica" FontSize="48" Background="Red" Foreground="White" FontWeight="Light" Width="66" BorderBrush="Black" Checked="ToggleButton_Checked" RenderTransformOrigin="0.5,0.5" Panel.ZIndex="21">
                    <ToggleButton.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="-180"/>
                        </TransformGroup>
                    </ToggleButton.RenderTransform>
                </ToggleButton>


                <CheckBox Visibility="Collapsed" x:Name="RPCheckBox" Content="" RenderTransformOrigin="1,1" Width="16" IsChecked="False" Checked="RPCBox_Checked" Unchecked="RPCBox_Unchecked" ToolTip="Thanks pizzaboxer For This Feature ;)">
                    <CheckBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="2" ScaleX="2"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="-162" Y="37.549"/>
                        </TransformGroup>
                    </CheckBox.RenderTransform>
                </CheckBox>
                <TextBlock Visibility="Collapsed" Text="Discord RPC" Width="350" Height="29" FontFamily="Helvetica"  Foreground="White" FontWeight="Light" FontSize="24" RenderTransformOrigin="0.5,0.5"   >
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="10" X="30"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform></TextBlock>

                <CheckBox x:Name="MultInstanceCheckBox" Content="" RenderTransformOrigin="1,1" Width="16" IsChecked="False" Checked="Multi_Checked" Unchecked="Multi_Unchecked">
                    <CheckBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="2" ScaleX="2"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="-162" Y="37.549"/>
                        </TransformGroup>
                    </CheckBox.RenderTransform>
                </CheckBox>
                <TextBlock Text="Multi-Instance Launching" Width="350" Height="29" FontFamily="Helvetica"  Foreground="White" FontWeight="Light" FontSize="24" RenderTransformOrigin="0.5,0.5"   >
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="10" X="30"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform></TextBlock>

                <CheckBox Visibility="Collapsed" x:Name="OldDeathCheckBox" Content="" RenderTransformOrigin="1,1" Width="16" IsChecked="False" Checked="OldDeath_Checked" Unchecked="OldDeath_Unchecked">
                    <CheckBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="2" ScaleX="2"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="-162" Y="37.549"/>
                        </TransformGroup>
                    </CheckBox.RenderTransform>
                </CheckBox>
                <TextBlock Visibility="Collapsed" Text="Use Old Death Sound" Width="350" Height="29" FontFamily="Helvetica"  Foreground="White" FontWeight="Light" FontSize="24" RenderTransformOrigin="0.5,0.5"   >
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="10" X="30"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform></TextBlock>

                <CheckBox Visibility="Collapsed" x:Name="OldAvatarModelSwapCheckBox" Content="" RenderTransformOrigin="0.5,0.5" Width="16" IsChecked="False" Checked="Swap_Checked" Unchecked="Swap_Unchecked">
                    <CheckBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="2" ScaleX="2"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="-170" Y="30"/>
                        </TransformGroup>
                    </CheckBox.RenderTransform>
                </CheckBox>
                <TextBlock Visibility="Collapsed" Text="Use Old Avatar Editor Background" Width="350" Height="29" FontFamily="Helvetica"  Foreground="White" FontWeight="Light" FontSize="22" RenderTransformOrigin="0.5,0.5"   >
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="10" X="30"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform></TextBlock>


                

                <CheckBox x:Name="AutoUpdateCheckBox" Visibility="Collapsed" Content="" RenderTransformOrigin="0.5,0.5" Width="16" IsChecked="False" Checked="AutoUpdate_Checked" Unchecked="AutoUpdate_Unchecked">
                    <CheckBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="2" ScaleX="2"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="-170" Y="30"/>
                        </TransformGroup>
                    </CheckBox.RenderTransform>
                </CheckBox>
                <TextBlock Visibility="Collapsed" Text="Automatically Update FDJASVS X Bootstrapper" Width="350" Height="27" FontFamily="Helvetica"  Foreground="White" FontWeight="Light" FontSize="16" RenderTransformOrigin="0.5,0.5"   >
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="10" X="30"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform></TextBlock>
                <CheckBox x:Name="QualityChangerBoxx" Content="" RenderTransformOrigin="0.5,0.5" Width="16" IsChecked="False" Checked="Boxx_Checked" Unchecked="Boxx_Unchecked">
                    <CheckBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="2" ScaleX="2"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="-170" Y="30"/>
                        </TransformGroup>
                    </CheckBox.RenderTransform>
                </CheckBox>
                <TextBlock Text="Higher Quality Slider Alternative" Width="350" Height="16" FontFamily="Helvetica"  Foreground="White" FontWeight="Light" FontSize="16" RenderTransformOrigin="0.5,0.5"   >
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="10" X="30"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform></TextBlock>
                <TextBlock Text="Explanation: 1-6 Are low graphics, Above 6 are high graphics" Width="350" Height="16" FontFamily="Helvetica"  Foreground="White" FontWeight="Light" FontSize="13" RenderTransformOrigin="0.5,0.5"   >
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="10" X="30"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform></TextBlock>


                <Button Content="Save" Background="#FFA7A6A6" BorderBrush="Black" Foreground="White" Name="SaveBtnS" FontWeight="Light" FontFamily="Helvetica" Width="210" Height="17" RenderTransformOrigin="0.5,0.5" Click="SaveBtnS_Click">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="25"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>



            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
